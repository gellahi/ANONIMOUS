<%- include('../layouts/layout', { title: title, body: `
<div class="row">
  <div class="col-md-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1><%= post.title %></h1>
      <div>
        <a href="/" class="btn btn-secondary me-2">Back to Home</a>
        <a href="/posts/<%= post._id %>/edit" class="btn btn-primary me-2">Edit</a>
        <form action="/posts/<%= post._id %>?_method=DELETE" method="POST" class="d-inline">
          <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
        </form>
      </div>
    </div>
    
    <div class="card mb-4">
      <div class="card-body">
        <div class="text-muted mb-3">
          <small>Posted on: <%= post.createdAt.toLocaleDateString() %></small>
        </div>
        <div class="post-content">
          <p><%= post.content %></p>
        </div>
      </div>
    </div>
  </div>
</div>
` }) %>
