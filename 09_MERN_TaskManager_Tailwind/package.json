{
  "name": "mern-task-manager-tailwind",
  "version": "1.0.0",
  "description": "MERN Stack Task Manager with Tailwind CSS",
  "main": "index.js",
  "scripts": {
    "start": "node server/server.js",
    "server": "nodemon server/server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && npm install --prefix server && npm install --prefix client"
  },
  "keywords": [
    "mern",
    "react",
    "node",
    "express",
    "mongodb",
    "tailwind",
    "task-manager"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22"
  }
}
